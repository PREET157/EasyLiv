<%layout("/layouts/boilerplate.ejs")%>
<body>
       <div class="w-full  p-6  ">
        <h2 class="text-2xl font-semibold mb-4 text-center text-rose-600">Edit your Listing</h2>
        <form class="space-y-5 m-auto max-w-[50%]" method="POST" action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data">
            <div>
                <label class="block text-gray-700 font-medium">Title</label>
                <input name="listings[title]" value="<%=listing.title%>" type="text" placeholder="Add a catchy title" class=" text-slate-500 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div>
            <div>
                <label class="block text-gray-700 font-medium">Description</label>
                <textarea name="listings[description]" placeholder="" class="text-slate-500 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required> <%=listing.description%></textarea>
            </div>
            <!-- <div>
                <label class="block text-gray-700 font-medium">Image Link</label>
                <input name="listings[image]" value="<%=listing.image.url%>"  type="text" placeholder="Enter image URL/Link" class="text-slate-500 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div> -->
            <div>
                <label class="block text-gray-700 font-medium">Upload Image </label>
                <input name="image" type="file" placeholder="Enter image URL/Link" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div>
            <div class="grid grid-cols-2 gap-5">
                <div>
                    <label class="block text-gray-700 font-medium">Price</label>
                    <input  name="listings[price]"  value="<%=listing.price%>" type="number" placeholder="price" class="text-slate-500 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
                </div>
                <div>
                    <label class="block text-gray-700 font-medium">Country</label>
                    <input  name="listings[country]" value="<%=listing.country%>"  type="text" placeholder="India" class=" text-slate-500 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
                </div>
            </div>
            <div>
                <label class="block text-gray-700 font-medium">Location</label>
                <input  name="listings[location]" value="<%=listing.location%>"  type="text" placeholder="Jaipur, Rajasthan" class=" text-slate-500 w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required>
            </div>
            <button type="submit" class="w-full bg-black text-white font-semibold py-3 rounded-md hover:bg-gray-800 transition duration-300">Edit</button>
        </form>
        <div class="flex justify-center mt-6 space-x-6 text-xl">
            <a href="#" class="text-gray-700 hover:text-black"><i class="fab fa-facebook"></i></a>
            <a href="#" class="text-gray-700 hover:text-black"><i class="fab fa-instagram"></i></a>
            <a href="#" class="text-gray-700 hover:text-black"><i class="fab fa-linkedin"></i></a>
        </div>
    </div>
</body>
