<%layout("/layouts/boilerplate.ejs")%>
  <body class="">
    <div class="">
      <!-- Sign Up Form -->
      <div class="min-h-[50%] flex items-center justify-center mt-10 ml-20 mb-10">
        <div class="w-full max-w-5xl mx-auto flex flex-col md:flex-row bg-stone-100 rounded-xl shadow-lg overflow-hidden">
          
          <!-- Left: Sign In -->
          <div class="w-full md:w-1/2 px-10 py-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Sign Up</h2>
            
            <!-- Social Login Icons  -->
             <div class="flex justify-center space-x-4 mb-4">
              <button class="w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-full flex items-center justify-center shadow">
                <i class="fab fa-facebook-f text-gray-600"></i>
              </button>
              <button class="w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-full flex items-center justify-center shadow">
                <i class="fab fa-google-plus-g text-gray-600"></i>
              </button>
              <button class="w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-full flex items-center justify-center shadow"> 
                <i class="fab fa-linkedin-in text-gray-600"></i>
              </button>
            </div>
    
            <p class="text-center text-gray-500 mb-6 text-sm">or use your account</p>
    
            <!-- Sign In Form -->
            <form action="/signup" method="post" class="space-y-4">
              <input type="text" name="username" placeholder="Username" required class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-pink-400" />
              <input type="email" name="email" placeholder="Email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-pink-400" />
              <input type="password" name="password" placeholder="Password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-pink-400" />
              <div class="text-right text-sm text-pink-500 hover:underline cursor-pointer">Forgot your password?</div>
              <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-full font-semibold hover:bg-red-600 transition duration-200">Sign In</button>
            </form>
          </div>
    
          <!-- Right: Welcome Message -->
          <div class="w-full md:w-1/2 bg-gradient-to-br from-rose-300 to-red-500 text-white flex flex-col items-center justify-center p-10">
            <h2 class="text-3xl font-bold mb-4">Hello, Friend!</h2>
            <p class="text-center mb-6 text-sm md:text-base">Enter your personal details and start <br/> your journey with us</p>
            <a href="/signup" class="border border-white rounded-full px-8 py-2 text-white font-medium hover:bg-white hover:text-red-500 transition duration-300">Sign Up</a>
          </div>
    
        </div>
      </div>
    </div>
  </body>